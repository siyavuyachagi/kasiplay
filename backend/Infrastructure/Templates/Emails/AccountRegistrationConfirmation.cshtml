@model NetSolutions.Templates.Emails.AccountRegistrationConfirmation

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Your Account Registration</title>
</head>
<body style="font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; line-height: 1.8; color: #1e293b; margin: 0; padding: 0; background-color: #f8fafc; -webkit-font-smoothing: antialiased;">
    <div style="max-width: 600px; margin: 40px auto; padding: 0; background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05); overflow: hidden;">
        <div style="text-align: center; padding: 28px 0; background-color: #8b5cf6; color: white;">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" style="max-height: 60px; margin-bottom: 10px;" />
            }
            <h1 style="margin: 0; font-weight: 600; font-size: 24px; letter-spacing: -0.025em;">Confirm Your @Model.CompanyName Account</h1>
        </div>

        <div style="padding: 32px;">
            <h2 style="font-size: 22px; font-weight: 700; color: #8b5cf6; margin: 0 0 24px 0;">Verify your email address</h2>

            <p style="margin: 0 0 16px 0;">Hello @Model.UserName,</p>

            <p style="margin: 0 0 16px 0;">Thank you for creating your @Model.CompanyName account. To complete your registration and get started, please verify your email address:</p>

            <center>
                <a href="@Model.ConfirmationUrl" style="display: inline-block; background-color: #8b5cf6; color: white; text-decoration: none; padding: 12px 28px; border-radius: 6px; font-weight: 600; margin: 24px 0; transition: background-color 0.2s ease;">Verify Email Address</a>
            </center>

            <p style="margin: 0 0 16px 0;">If the button doesn't work, you can copy and paste this link into your browser:</p>

            <div style="background-color: #f5f3ff; border: 1px solid #ddd6fe; border-radius: 6px; padding: 12px 16px; margin: 16px 0; word-break: break-all; font-size: 14px; color: #8b5cf6;">@Model.ConfirmationUrl</div>

            @if (!string.IsNullOrEmpty(Model.ConfirmationCode))
            {
                <p style="margin: 0 0 16px 0;">You can also use this code to verify your account:</p>
                <div style="background-color: #f5f3ff; border: 1px solid #ddd6fe; border-radius: 6px; padding: 16px; font-family: 'SF Mono', 'Roboto Mono', 'Courier New', monospace; font-size: 18px; letter-spacing: 2px; text-align: center; margin: 24px 0;">@Model.ConfirmationCode</div>
            }

            @if (Model.ExpirationTime is not null)
            {
                <div style="background-color: #fee2e2; border-left: 4px solid #f87171; padding: 16px 20px; margin: 24px 0; border-radius: 6px; color: #f87171;">
                    <p style="margin: 0;"><strong>Please note:</strong> This verification link will expire in @Model.ExpirationTime. Verify your email soon to avoid any delays.</p>
                </div>
            }

            <div style="background-color: #fffbeb; border-left: 4px solid #fbbf24; padding: 16px 20px; margin: 24px 0; border-radius: 6px;">
                <h3 style="color: #fbbf24; margin-top: 0; font-weight: 600; font-size: 16px;">What happens next?</h3>
                <ul style="margin: 12px 0 0 0; padding-left: 24px;">
                    <li style="margin-bottom: 8px;">Your account will be fully activated</li>
                    <li style="margin-bottom: 8px;">You'll gain access to all features and services</li>
                    <li style="margin-bottom: 0;">You'll receive a welcome email with helpful resources</li>
                </ul>
            </div>

            @* <div style="background-color: #f5f3ff; border-left: 4px solid #8b5cf6; padding: 16px 20px; margin: 24px 0; border-radius: 6px;"> *@
            @*     <p style="margin: 8px 0;"><strong>Username:</strong> @Model.UserName</p> *@
            @*     <p style="margin: 8px 0;"><strong>Registration Date:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p> *@
            @* </div> *@

            @if (!string.IsNullOrEmpty(Model.SupportEmail))
            {
                <p style="margin: 0 0 16px 0;">If you have any questions, contact our support team at <a href="mailto:@Model.SupportEmail" style="color: #8b5cf6; text-decoration: underline;">@Model.SupportEmail</a>.</p>
            }

            <div style="margin-top: 32px;">
                <p style="margin: 0 0 16px 0;">Thanks for choosing @Model.CompanyName!</p>
                <p style="margin: 0 0 16px 0;">The @Model.CompanyName Team</p>
            </div>
        </div>

        <div style="text-align: center; padding: 24px 32px; background-color: #f8fafc; color: #94a3b8; font-size: 13px; border-top: 1px solid #e2e8f0;">
            <p style="margin: 0 0 16px 0;">&copy; @DateTime.Now.Year @Model.CompanyName. All rights reserved.</p>

            @if (Model.SocialLinks != null && Model.SocialLinks.Any())
            {
                <div style="margin: 16px 0;">
                    @foreach (var link in Model.SocialLinks)
                    {
                        <a href="@link.Url" style="display: inline-block; margin: 0 8px; color: #8b5cf6; text-decoration: none; font-weight: 500;">@link.Name</a>
                    }
                </div>
            }

            <p style="margin: 0 0 16px 0;">
                @Model.CompanyAddress<br />
                @if (!string.IsNullOrEmpty(Model.UnsubscribeUrl))
                {
                    <span style="color: #64748b; font-size: 12px; text-decoration: underline;">
                        <a href="@Model.UnsubscribeUrl" style="color: #64748b;">Unsubscribe</a>
                    </span>
                }
            </p>
        </div>
    </div>
</body>
</html>