@model NetSolutions.WebApi.Templates.Emails.AccountDeleted

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Deleted</title>
</head>

<body style="font-family:'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; line-height:1.8; color:#1E293B; margin:0; padding:0; background-color:#f8fafc; -webkit-font-smoothing:antialiased;">
    <div style="max-width:600px; margin:40px auto; padding:0; background-color:#ffffff; border-radius:12px; box-shadow:0 4px 6px rgba(0,0,0,0.05); overflow:hidden;">
        <div style="text-align:center; padding:28px 0; background-color:#8b5cf6; color:white;">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" style="max-height: 60px; margin-bottom: 10px;" />
            }
            <h1 style="margin:0; font-weight:600; font-size:24px; letter-spacing:-0.025em;">Goodbye from @Model.CompanyName</h1>
        </div>

        <div style="padding:32px;">
            <h2 style="font-size:22px; font-weight:700; color:#f87171; margin:0 0 24px 0;">Account Deleted</h2>

            <p style="margin:0 0 16px 0;">Hello @Model.UserName,</p>
            <p style="margin:0 0 16px 0;">We're confirming that your account with @Model.CompanyName has been successfully deleted. We're sorry to see you go and hope to have you back in the future.</p>

            <div style="background-color:#fef2f2; border-left:4px solid #f87171; padding:16px 20px; margin:24px 0; border-radius:6px;">
                <p style="margin:8px 0;"><strong>Username:</strong> @Model.UserName</p>
                <p style="margin:8px 0;"><strong>Deleted At:</strong> @Model.CreatedAt.ToString("f")</p>
            </div>

            <div style="background-color:#f5f3ff; border-left:4px solid #8b5cf6; padding:16px 20px; margin:24px 0; border-radius:6px;">
                <h3 style="color:#8b5cf6; margin-top:0; font-weight:600; font-size:16px;">Changed your mind?</h3>
                <p style="margin:0;">
                    If this was a mistake or you have questions, feel free to reach out to us at
                    <a href="mailto:@Model.SupportEmail" style="color:#8b5cf6; font-weight:500;">@Model.SupportEmail</a>.
                </p>
            </div>

            <div style="margin-top:32px;">
                <p style="margin:0 0 16px 0;">Thanks for having been part of @Model.CompanyName.</p>
                <p style="margin:0;">The @Model.CompanyName Team</p>
            </div>
        </div>

        <div style="text-align:center; padding:24px 32px; background-color:#f8fafc; color:#94a3b8; font-size:13px; border-top:1px solid #e2e8f0;">
            <p style="margin:0 0 16px 0;">&copy; @DateTime.Now.Year @Model.CompanyName. All rights reserved.</p>
            @if (Model.SocialLinks != null && Model.SocialLinks.Any())
            {
                <div style="margin: 16px 0;">
                    @foreach (var link in Model.SocialLinks)
                    {
                        <a href="@link.Url" style="display: inline-block; margin: 0 8px; color: #8b5cf6; text-decoration: none; font-weight: 500;">@link.Name</a>
                    }
                </div>
            }
            <p style="margin: 0 0 16px 0;">
                @Model.CompanyAddress?.Street, @Model.CompanyAddress?.PostalCode, @Model.CompanyAddress?.City, @Model.CompanyAddress?.Country<br />
                @if (!string.IsNullOrEmpty(Model.UnsubscribeUrl))
                {
                    <span style="color: #64748b; font-size: 12px; text-decoration: underline;">
                        <a href="@Model.UnsubscribeUrl" style="color: #64748b;">Unsubscribe</a>
                    </span>
                }
            </p>
        </div>
    </div>
</body>
</html>
