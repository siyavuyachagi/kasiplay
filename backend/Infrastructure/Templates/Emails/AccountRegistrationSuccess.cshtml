@model NetSolutions.WebApi.Templates.Emails.AccountRegistrationSuccess

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Successful</title>
</head>

<body style="font-family:'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; line-height:1.8; color:#1E293B; margin:0; padding:0; background-color:#f8fafc; -webkit-font-smoothing:antialiased;">
    <div style="max-width:600px; margin:40px auto; padding:0; background-color:#ffffff; border-radius:12px; box-shadow:0 4px 6px rgba(0,0,0,0.05); overflow:hidden;">
        <div style="text-align:center; padding:28px 0; background-color:#8b5cf6; color:white;">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" style="max-height: 60px; margin-bottom: 10px;" />
            }
            <h1 style="margin:0; font-weight:600; font-size:24px; letter-spacing:-0.025em;">Welcome to @Model.CompanyName</h1>
        </div>

        <div style="padding:32px;">
            <h2 style="font-size:22px; font-weight:700; color:#34d399; margin:0 0 24px 0;">Registration Successful!</h2>

            <p style="margin:0 0 16px 0;">Hello @Model.UserName,</p>
            <p style="margin:0 0 16px 0;">Thank you for registering with @Model.CompanyName. Your account has been successfully created and is now active. We're excited to have you join our community!</p>

            <div style="background-color:#ecfdf5; border-left:4px solid #34d399; padding:16px 20px; margin:24px 0; border-radius:6px;">
                <p style="margin:8px 0;"><strong>Username:</strong> @Model.UserName</p>
                <p style="margin:8px 0;"><strong>Timestamp:</strong> @Model.CreatedAt.ToString("f")</p>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.DashboardUrl))
            {
                <center>
                    <a href="@Model.DashboardUrl" style="display:inline-block; background-color:#8b5cf6; color:white; text-decoration:none; padding:12px 28px; border-radius:6px; font-weight:600; margin:24px 0; transition:background-color 0.2s ease;">Go to My Dashboard</a>
                </center>
            }

            <div style="margin: 32px 0;">
                <h3 style="font-size: 18px; font-weight: 600; color: #1E293B; margin-top: 0; margin-bottom: 16px;">Getting Started</h3>

                <!-- Step 1 -->
                <div style="display: flex; margin-bottom: 16px; align-items: flex-start;">
                    <div style="width: 28px; height: 28px; background-color: #8b5cf6; border-radius: 50%; margin-right: 12px; flex-shrink: 0; text-align: center; vertical-align: middle; line-height: 28px;">
                        <span style="color: white; font-weight: 600; font-size: 14px;">1</span>
                    </div>
                    <div style="flex: 1;">
                        <div style="font-weight: 600; margin-bottom: 4px;">Complete your profile</div>
                        <p style="margin: 0 0 16px 0;">Add your profile picture and personal information to make your account more personalized.</p>
                    </div>
                </div>

                <!-- Step 2 -->
                <div style="display: flex; margin-bottom: 16px; align-items: flex-start;">
                    <div style="width: 28px; height: 28px; background-color: #8b5cf6; border-radius: 50%; margin-right: 12px; flex-shrink: 0; text-align: center; vertical-align: middle; line-height: 28px;">
                        <span style="color: white; font-weight: 600; font-size: 14px;">2</span>
                    </div>
                    <div style="flex: 1;">
                        <div style="font-weight: 600; margin-bottom: 4px;">Explore available features</div>
                        <p style="margin: 0 0 16px 0;">Discover all the tools and features available to help you make the most of your experience.</p>
                    </div>
                </div>

                <!-- Step 3 -->
                <div style="display: flex; margin-bottom: 16px; align-items: flex-start;">
                    <div style="width: 28px; height: 28px; background-color: #8b5cf6; border-radius: 50%; margin-right: 12px; flex-shrink: 0; text-align: center; vertical-align: middle; line-height: 28px;">
                        <span style="color: white; font-weight: 600; font-size: 14px;">3</span>
                    </div>
                    <div style="flex: 1;">
                        <div style="font-weight: 600; margin-bottom: 4px;">Connect with others</div>
                        <p style="margin: 0 0 16px 0;">Start engaging with our community and build your network.</p>
                    </div>
                </div>
            </div>

            <div style="background-color:#f5f3ff; border-left:4px solid #8b5cf6; padding:16px 20px; margin:24px 0; border-radius:6px;">
                <h3 style="color:#8b5cf6; margin-top:0; font-weight:600; font-size:16px;">Your Account Benefits</h3>
                <ul style="margin:12px 0 0 0; padding-left:24px;">
                    <li style="margin-bottom:8px;">Full access to all platform features</li>
                    <li style="margin-bottom:8px;">Personalized recommendations</li>
                    <li style="margin-bottom:8px;">Email notifications for important updates</li>
                    <li style="margin-bottom:0;">Customer support priority</li>
                </ul>
            </div>

            <div style="background-color:#f5f3ff; border-radius:6px; padding:16px 20px; margin:24px 0;">
                <h3 style="color:#8b5cf6; margin-top:0; font-weight:600; font-size:16px;">Need Help?</h3>
                <p style="margin:0 0 16px 0;">
                    If you have any questions or need assistance, please check our
                    <a href="@Model.HelpCenterUrl" style="color:#8b5cf6; font-weight:500;">Help Center</a>
                    or contact our support team at
                    <a href="mailto:@Model.SupportEmail" style="color:#8b5cf6; font-weight:500;">@Model.SupportEmail</a>.
                </p>
            </div>

            <div style="margin-top:32px;">
                <p style="margin:0 0 16px 0;">Thanks for choosing @Model.CompanyName!</p>
                <p style="margin:0;">The @Model.CompanyName Team</p>
            </div>
        </div>

        <div style="text-align:center; padding:24px 32px; background-color:#f8fafc; color:#94a3b8; font-size:13px; border-top:1px solid #e2e8f0;">
            <p style="margin:0 0 16px 0;">&copy; @DateTime.Now.Year @Model.CompanyName. All rights reserved.</p>
            @if (Model.SocialLinks != null && Model.SocialLinks.Any())
            {
                <div style="margin: 16px 0;">
                    @foreach (var link in Model.SocialLinks)
                    {
                        <a href="@link.Url" style="display: inline-block; margin: 0 8px; color: #8b5cf6; text-decoration: none; font-weight: 500;">@link.Name</a>
                    }
                </div>
            }
            <p style="margin: 0 0 16px 0;">
                @Model.CompanyAddress?.Street, @Model.CompanyAddress?.PostalCode, @Model.CompanyAddress?.City, @Model.CompanyAddress?.Country<br />
                @if (!string.IsNullOrEmpty(Model.UnsubscribeUrl))
                {
                    <span style="color: #64748b; font-size: 12px; text-decoration: underline;">
                        <a href="@Model.UnsubscribeUrl" style="color: #64748b;">Unsubscribe</a>
                    </span>
                }
            </p>
        </div>
    </div>
</body>
</html>
